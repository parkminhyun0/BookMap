<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <title>BookMap 상세페이지</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    .container { max-width: 800px; margin: 0 auto; }
    .cover { width: 200px; height: 280px; object-fit: cover; border-radius: 6px; }
    h1 { font-size: 24px; margin-top: 0; }
    .meta { margin: 6px 0; color: #555; }
    .reason { margin: 14px 0; font-size: 16px; }
    a { color: #1a73e8; text-decoration: none; }
    a:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <div class="container" id="detail">불러오는 중...</div>
  <script>
    const API_URL = 'https://script.google.com/macros/s/AKfycbxFb7I_eFXm7nPtkcezalzNRSeJ3Pg5lPM6byRbiEHkF8pXVjReRC_kYKsVD0flABYrQw/exec';

    const esc = (s) => String(s ?? '').replace(/[&<>"']/g, c => ({
      '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'
    }[c]));

    async function loadDetail() {
      const params = new URLSearchParams(window.location.search);
      const id = params.get('id'); // index.html에서 전달된 id
      const container = document.getElementById('detail');
      try {
        const res = await fetch(`${API_URL}?action=list&status=승인`);
        const data = await res.json();
        const book = data[id];

        if (!book) {
          container.textContent = '도서를 찾을 수 없습니다.';
          return;
        }

        container.innerHTML = `
          <h1>${esc(book.title)}</h1>
          <img class="cover" src="${esc(book.cover)}" alt="${esc(book.title)}" />
          <div class="meta"><b>저자:</b> ${esc(book.author)}</div>
          <div class="meta"><b>분야:</b> ${esc(book.category)}</div>
          <div class="meta"><b>난이도:</b> ${esc(book.level)}</div>
          <div class="reason">${esc(book.reason)}</div>
          ${book.link ? `<a href="${esc(book.link)}" target="_blank">구매 링크</a>` : ''}
          <p><a href="index.html">← 목록으로 돌아가기</a></p>
        `;
      } catch (e) {
        container.textContent = '불러오기 실패: ' + e;
      }
    }

    loadDetail();
  </script>
</body>
</html>
